{% import kachnitel_admin_theme as css %}
<input
    type="text"
    class="{{ css.form_input_sm() }}"
    placeholder="{{ filterMetadata.placeholder|default('Search ' ~ (filterMetadata.targetEntity|default(column|humanize)) ~ '...') }}"
    data-model="debounce(300)|value"
    value="{{ value }}"
    {% if filterMetadata.searchFields is defined %}
        title="Searches: {{ filterMetadata.searchFields|join(', ') }}"
    {% endif %}
>
