{#
 # DataSource list template (read-only).
 # Uses the EntityList component in data source mode.
 #
 # Variables:
 # @var string dataSourceId - Identifier of the data source
 # @var DataSourceInterface dataSource - The data source instance
 #}
{% extends kachnitel_admin_base_layout ?: '@KachnitelAdmin/admin/base.html.twig' %}

{% block headerTitle %}
    {{ dataSource.label }}
{% endblock %}

{% block headerButtons %}
    {# Data sources are read-only, no "New" button #}
{% endblock %}

{% block content %}
    <twig:K:Admin:EntityList
        :dataSourceId="dataSourceId"
    />
{% endblock %}
