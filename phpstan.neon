parameters:
    level: 6
    paths:
        - src
        - tests
    excludePaths:
        - tests/Functional/TestKernel.php
    tmpDir: .phpstan
    ignoreErrors:
        # PHPUnit mock method false positives
        - '#Call to an undefined method .+::(method|expects|with|willReturn|willReturnCallback)\(\)#'
        # Test fixtures - properties set by Doctrine, not in tests
        - '#Property Kachnitel\\AdminBundle\\Tests\\Fixtures\\.+ is never assigned#'
        # Test fixtures - properties only written by Doctrine
        - '#Property .+ is never read, only written#'
        # Match expression in tests handling various types
        - '#Match expression does not handle remaining value#'
        # Match arm false positive with constants
        - '#Match arm comparison between .+ and .+ is always true#'
        # Ignore PHPMD @SuppressWarnings annotation parsing errors
        - '#PHPDoc tag @SuppressWarnings has invalid value#'
        # Doctrine repository template type cannot be resolved statically
        - '#Unable to resolve the template type T in call to method Doctrine\\ORM\\EntityManagerInterface::getRepository\(\)#'
