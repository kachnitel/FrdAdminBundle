# Kachnitel Admin Bundle Configuration
#
# Entities are discovered automatically via #[Admin] attribute.
# See docs/CONFIGURATION.md for entity attribute options.

kachnitel_admin:
    # Your app's base layout template (admin extends this)
    # base_layout: 'base.html.twig'

    # Role required to access admin (set to ~ to disable)
    # required_role: 'ROLE_ADMIN'

    # Theme: bootstrap (default) or tailwind
    # theme: '@KachnitelAdmin/theme/bootstrap.html.twig'

    # Entity and form namespaces (usually don't need to change)
    # entity_namespace: 'App\Entity\'
    # form_namespace: 'App\Form\'
    # form_suffix: 'FormType'

    # Route configuration (usually don't need to change)
    # route_prefix: 'app_admin_entity'
    # dashboard_route: 'app_admin_dashboard'

    # Pagination
    # pagination:
    #     default_items_per_page: 20
    #     allowed_items_per_page: [10, 20, 50, 100]

    # Disable the generic controller if using custom controllers
    # enable_generic_controller: true

## Quick Start:
##
## 1. Add #[Admin] attribute to your entity:
##
##    use Kachnitel\AdminBundle\Attribute\Admin;
##
##    #[Admin(label: 'Products', icon: 'inventory')]
##    class Product { }
##
## 2. Import routes in config/routes/kachnitel_admin.yaml:
##
##    kachnitel_admin:
##        resource: '@KachnitelAdminBundle/config/routes.yaml'
##        prefix: /admin
##
## 3. Visit /admin - your entity appears automatically!
##
## See docs/ for column configuration, permissions, and customization.
