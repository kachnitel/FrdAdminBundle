{
    "name": "kachnitel/admin-bundle",
    "description": "Modern Symfony admin bundle powered by LiveComponents for Doctrine entities with extensive customization",
    "type": "symfony-bundle",
    "license": "MIT",
    "keywords": [
        "symfony",
        "symfony-ux",
        "admin",
        "crud",
        "doctrine",
        "live-component",
        "ux",
        "bundle"
    ],
    "authors": [
        {
            "name": "Ondrej Vana",
            "email": "kachnitel@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.4",
        "symfony/framework-bundle": "^6.4|^7.0|^8.0",
        "symfony/twig-bundle": "^6.4|^7.0|^8.0",
        "symfony/form": "^6.4|^7.0|^8.0",
        "symfony/security-bundle": "^6.4|^7.0|^8.0",
        "symfony/serializer": "^6.4|^7.0|^8.0",
        "symfony/ux-live-component": "^2.13",
        "symfony/ux-twig-component": "^2.13",
        "doctrine/orm": "^3.5",
        "doctrine/doctrine-bundle": "^3.0",
        "twig/twig": "^3.15"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "symfony/browser-kit": "^6.4|^7.0|^8.0",
        "symfony/css-selector": "^6.4|^7.0|^8.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/extension-installer": "^1.4",
        "symfony/yaml": "^6.4|^7.0|^8.0",
        "symfony/stimulus-bundle": "^2.31",
        "symfony/webpack-encore-bundle": "^2.4",
        "symfony/var-exporter": "^6.4|^7.0|^8.0",
        "symfony/console": "^6.4|^7.0|^8.0",
        "marcocesarato/php-conventional-changelog": "^1.17",
        "friendsofphp/php-cs-fixer": "^3.51",
        "phpmd/phpmd": "^2.12",
        "smnandre/twigmetrics": "^1.1"
    },
    "suggest": {
        "kachnitel/entity-components-bundle": "For attachment, tag, and comment features"
    },
    "autoload": {
        "psr-4": {
            "Kachnitel\\AdminBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kachnitel\\AdminBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@phpstan",
            "@phpcs",
            "@phpunit",
            "@phpmd"
        ],
        "phpstan": "phpstan analyse --memory-limit=1G",
        "phpunit": "phpunit",
        "phpunit:debug": [
            "@php -dxdebug.mode=debug -dxdebug.start_with_request=yes -dxdebug.client_port=${XDEBUG_PORT:-9003} ./vendor/bin/phpunit --colors=always"
        ],
        "coverage": "XDEBUG_MODE=coverage phpunit --coverage-text --coverage-html=.coverage",
        "phpmd": "vendor/bin/phpmd . ansi ./phpmd.ruleset.xml --exclude 'tests/*,vendor/*,var/*,.phpstan/*,.coverage/*'",
        "phpmd:text": "vendor/bin/phpmd . text ./phpmd.ruleset.xml --exclude 'tests/*,vendor/*,var/*,.phpstan/*,.coverage/*'",
        "phpcs": "vendor/bin/php-cs-fixer fix --dry-run --diff src",
        "phpcs:fix": "vendor/bin/php-cs-fixer fix src",
        "metrics": ".metrics/update-metrics.sh",
        "install-hooks": ".githooks/install-hooks.sh",
        "release": ".scripts/release.sh"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "version": "0.5.0",
    "extra": {
        "symfony": {}
    }
}